<header>
  <div class="container">
    <div class="header-wrapper">
      <div class="logo-brand">
        <a href="/" style="font-weight:700;text-decoration:none">
          HOME PAGE
        </a>
        </div>
          <div class="search-form">
            <form class="d-flex">
              <div class="wrap">
                <div class="search">
                  <input
                    type="text"
                    class="searchTerm"
                    placeholder="Tìm kiếm món ăn"
                  />
                  <button type="submit" class="searchButton">
                    <i class="fa fa-search"></i>
                  </button>
                </div>
              </div>
            </form>
          </div>
          <div class="nav-user-action">
          <%= link_to "Category", categories_path, class:"btn mr-2"%>
          <%= link_to "Foods", foods_path,class:"btn"%>
          <%= link_to "Bill", bill_bill_path,class:"btn"%>
          <% if @user%>
          <%= link_to "Logout",destroy_user_session_path,method: :DELETE ,class:"btn"%>
          <%= link_to "Profile", edit_user_registration_path, class:"btn"%>
          <%end%>
          <% if !@user%>
          <%= link_to "Login", new_user_session_path,class:"btn"%>
          <%= link_to "Register", new_user_registration_path,class:"btn"%>
          <%end%>
           
          </div>
        </div>
      </div>
</header>
<div class="container">
    <p id="notice"><%= notice %></p>

    <h1 class="align-center">Categories</h1>

    <table class="table table-striped table-hover ">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Image</th>
          <th colspan="3">Edit</th>
        </tr>
      </thead>

      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td><%= category.description %></td>
            <td><%= image_tag category.image, style: 'width:50px;height:50px' %></td>
            <td><%= link_to 'Show', category,class:'btn' %></td>
            <td><%= link_to 'Edit', edit_category_path(category),class:'btn' %></td>
            <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } ,class:'btn'%></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Category', new_category_path,class:"btn btn-primary" %>
</div>