<header>
  <div class="container">
    <div class="header-wrapper">
      <div class="logo-brand">
        <a href="/" style="font-weight:700;text-decoration:none">
          HOME PAGE
        </a>
        </div>
          <div class="search-form">
            <form class="d-flex">
              <div class="wrap">
                <div class="search">
                  <input
                    type="text"
                    class="searchTerm"
                    placeholder="Tìm kiếm món ăn"
                  />
                  <button type="submit" class="searchButton">
                    <i class="fa fa-search"></i>
                  </button>
                </div>
              </div>
            </form>
          </div>
          <div class="nav-user-action">
          <%= link_to "Category", categories_path, class:"btn mr-2"%>
          <%= link_to "Foods", foods_path,class:"btn"%>
          <%= link_to "Bill", bill_bill_path,class:"btn"%>
          <% if @user%>
          <%= link_to "Logout",destroy_user_session_path,method: :DELETE ,class:"btn"%>
          <%= link_to "Profile", edit_user_registration_path, class:"btn"%>
          <%end%>
          <% if !@user%>
          <%= link_to "Login", new_user_session_path,class:"btn"%>
          <%= link_to "Register", new_user_registration_path,class:"btn"%>
          <%end%>
           
          </div>
        </div>
      </div>
</header>
<div class="container" style="margin-top:70px">

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Total</th>
      <th>Price</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
  <%i = 0%>
  <%@billItems.each do |item| %>
      <tr>
        <td><%= @foods[i].name %></td>
        <td><%= image_tag @foods[i].image,style:'width:30px;height:30px' %></td>
        <td><%= item.total %></td>
        <td><%= item.total*@foods[i].price %></td>
        <td><a href="/bill_items/delete/<%=item.id%>" class="btn">Delete</a></td>
      </tr>
      <%i+=1%>
    <% end %>
  </tbody>
</table>
<%if @bill.status == 1 %>
  <a class="btn btn-outline-primary float-right" href="/bill_items/order/<%=@bill.id%>">Order</a>
  <%end%>
</div>
    