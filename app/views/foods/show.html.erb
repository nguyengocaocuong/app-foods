<header>
  <div class="container">
    <div class="header-wrapper">
      <div class="logo-brand">
        <a href="/" style="font-weight:700;text-decoration:none">
          HOME PAGE
        </a>
        </div>
          <div class="search-form">
            <form class="d-flex">
              <div class="wrap">
                <div class="search">
                  <input
                    type="text"
                    class="searchTerm"
                    placeholder="Tìm kiếm món ăn"
                  />
                  <button type="submit" class="searchButton">
                    <i class="fa fa-search"></i>
                  </button>
                </div>
              </div>
            </form>
          </div>
          <div class="nav-user-action">
          <%= link_to "Category", categories_path, class:"btn mr-2"%>
          <%= link_to "Foods", foods_path,class:"btn"%>
           <%= link_to "Bill", bill_bill_path,class:"btn"%>
          <% if @user%>
          <%= link_to "Logout",destroy_user_session_path,method: :DELETE ,class:"btn"%>
          <%= link_to "Profile", edit_user_registration_path, class:"btn"%>
          <%end%>
          <% if !@user%>
          <%= link_to "Login", new_user_session_path,class:"btn"%>
          <%= link_to "Register", new_user_registration_path,class:"btn"%>
          <%end%>
           
          </div>
        </div>
      </div>
</header>

<p>
  <strong>Name:</strong>
  <%= @food.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @food.price %>
</p>

<p>
  <strong>Total:</strong>
  <%= @food.total %>
</p>

<p>
  <strong>Decription:</strong>
  <%= @food.decription %>
</p>

<p>
  <strong>Vote:</strong>
  <%= @food.vote %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag @food.image, style: 'width:50px;height:50px' %>
</p>

<%= link_to 'Edit', edit_food_path(@food) %> |
<%= link_to 'Back', foods_path %>
